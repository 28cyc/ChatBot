<br />
<div style="display: flex;width:100%;justify-content:space-between">
    <div id="orderList" style="width: 35%;">
        <table data-toggle="table" class="table">
            @foreach (var item in (List<ChatBot.Models.OrderFormModel>)ViewBag.oederList)
            {
                <tr onclick="showDetail(@Json.Encode(@item))" style="cursor: pointer;">
                    <td><h2>@item.DeskNo</h2></td>
                    <td>
                        <p>人數：@item.PeopleNum</p>
                        <p>訂單狀態：@item.OrderStatus</p>
                        <p>用餐時間：@item.EatingTime</p>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div style="width:60%">
        <div id="orderContent">
            <div style="display: flex;justify-content:space-between">
                <h3>桌號：</h3>
                <div style="display: flex;">
                    <button id="foodDone" style="background-color:#66B3FF">出餐</button>
                    <button id="checkout" style="background-color:#FF7575">結帳</button>
                </div>
            </div>
            <p>人數：</p>
            <p>訂單狀態：</p>
            <p>備註：</p>
        </div>
        <div id="orderDetail">
            <table data-toggle="table" class="table">
                <tr id="orderItem">
                    <td></td>
                    <td style="text-align:right"></td>
                </tr>
                <tr id="orderTotal">
                    <td>總計</td>
                    <td style="text-align:right">0</td>
                </tr>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    function showDetail(data) {
        var orderContent = document.getElementById("orderContent");
        orderContent.getElementsByTagName("h3")[0].innerHTML = "桌號：" + data.DeskNo;
        orderContent.getElementsByTagName("p")[0].innerHTML = "人數：" + data.PeopleNum;
        orderContent.getElementsByTagName("p")[1].innerHTML = "訂單狀態：" + data.OrderStatus;
        orderContent.getElementsByTagName("p")[2].innerHTML = "備註：" + data.Memo;
        getOrderDetail(data.OrderForm_ID);
    }

    function getOrderDetail(OrderFormID) {
        $.ajax({
            type: 'POST',
            url: "/Order/getOrderDetail",
            dataType: 'json',
            data: {
                OrderFormID: OrderFormID,
            },
            success: function (data) {
                setOrderDetail(data);
            },
            error: function (data) {
                alert("錯誤!");
            }
        });
    }

    function setOrderDetail(data) {
        var orderItem = document.getElementById("orderItem");
        var orderTotal = document.getElementById("orderTotal");
        var foodNameString = "";
        var foodPriceString = "";
        var foodTotal = 0;
        data.forEach(food => foodNameString += "<p>" + food.Food_Name + "</p>");
        data.forEach(food => foodPriceString += "<p>" + food.Food_Price.toLocaleString() + "</p>");
        data.forEach(food => foodTotal += food.Food_Price);
        orderItem.getElementsByTagName("td")[0].innerHTML = foodNameString;
        orderItem.getElementsByTagName("td")[1].innerHTML = foodPriceString;
        orderTotal.getElementsByTagName("td")[1].innerHTML = foodTotal.toLocaleString();
    }
</script>
